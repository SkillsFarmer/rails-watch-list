<div class='container mt-3 text-center'>
  <h1><%= @list.name %></h1>
  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.comment %>
        <%= link_to "Delete",
        list_bookmark_path(@list, bookmark),
        method: :delete,
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?" },
        class: "btn btn-warning btn-lg" %>
      </li>
    <% end %>
  </ul>
  <div class='d-flex justify-content-between'>
    <div> <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-success btn-lg"%></div>
    <div class=''> <%= link_to 'To Home', lists_path, class: "btn btn-primary btn-lg"%></div>
  </div>
</div>
