<section>
  <div class='navbar'> New List</div>
  <div class=" mb-5 banner d-flex">
  <div>
    <h1 class="mb-4 text-center">Save Any Kind of Movies</h1>
  </div>
    <div class="container my-5">
      <div class="row">
        <% @movies.each do |movie| %>
          <div class="col-md-4 mb-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <h2 class="mt-5 mb-4 text-center">See All Lists</h2>
      <% @lists.each do |list| %>
        <div class="cards position-relative">
          <div class="card-category">
            <%= link_to list.name, list_path(list), class: "stretched-link" %>
          </div>
        </div>
      <% end %>
      <div class="text-center mt-4">
        <%= link_to "Create a List", new_list_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</section>
